---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" lang="en">
  <div class="text-center py-20">
    <h1 class="text-6xl font-bold text-amber-900 mb-4">404</h1>
    <p class="text-xl text-barley-corn-600 mb-8">Page not found.</p>
    <a 
      href="/en/" 
      class="inline-block bg-amber-700 text-white px-6 py-3 rounded-full hover:bg-amber-800 transition-colors"
    >
      Go Home
    </a>
  </div>
</BaseLayout>
