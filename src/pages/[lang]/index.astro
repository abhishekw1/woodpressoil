---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProductCard from '../../components/ProductCard.astro';
import WhatsAppButton from '../../components/WhatsAppButton.astro';
import { products } from '../../data/products';
import { ui } from '../../i18n/ui';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'mr' } },
  ];
}

const { lang } = Astro.params;
const currentLang = (lang as 'en' | 'mr') || 'en';
const t = ui[currentLang];

const title = t['site.title'];
---

<BaseLayout title={title} lang={currentLang}>
  <!-- Hero Section -->
  <section id="top" class="relative bg-stone-900 text-white rounded-3xl overflow-hidden mb-16 px-6 py-24 md:py-32 text-center">
    <div class="absolute inset-0 bg-stone-900/60 z-10"></div>
    <div class="absolute inset-0 bg-[url('https://placehold.co/1200x600?text=Pure+Wood+Pressed+Oil')] bg-cover bg-center"></div>
    <div class="relative z-20 container mx-auto">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight max-w-4xl mx-auto">
        {t['home.hero.headline']}
      </h1>
      <p class="text-lg md:text-xl text-stone-200 mb-8 max-w-2xl mx-auto">
        {t['home.hero.subheadline']}
      </p>
      <a 
        href="#products" 
        class="inline-block bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-8 rounded-full transition-transform hover:scale-105 duration-300"
      >
        {t['home.cta']}
      </a>
    </div>
  </section>

  <!-- Features Section -->
  <section class="mb-20 scroll-mt-24">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-amber-900">{t['home.features.title']}</h2>
      <div class="w-24 h-1 bg-amber-500 mx-auto mt-4 rounded-full"></div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      <!-- Feature 1 -->
      <div class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition-shadow border border-stone-100 text-center">
        <div class="w-16 h-16 bg-green-100 text-green-700 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-stone-800 mb-3">{t['feature.1.title']}</h3>
        <p class="text-stone-600">{t['feature.1.desc']}</p>
      </div>

      <!-- Feature 2 -->
      <div class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition-shadow border border-stone-100 text-center">
        <div class="w-16 h-16 bg-amber-100 text-amber-700 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-stone-800 mb-3">{t['feature.2.title']}</h3>
        <p class="text-stone-600">{t['feature.2.desc']}</p>
      </div>

      <!-- Feature 3 -->
      <div class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition-shadow border border-stone-100 text-center">
        <div class="w-16 h-16 bg-orange-100 text-orange-700 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-stone-800 mb-3">{t['feature.3.title']}</h3>
        <p class="text-stone-600">{t['feature.3.desc']}</p>
      </div>
    </div>
  </section>

  <!-- Products Section -->
  <section id="products" class="mb-24 scroll-mt-24">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-amber-900">{t['home.products.title']}</h2>
      <div class="w-24 h-1 bg-amber-500 mx-auto mt-4 rounded-full"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {products.map((product) => (
        <ProductCard product={product} lang={currentLang} />
      ))}
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="mb-24 scroll-mt-24 bg-stone-50 py-12 rounded-3xl">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-3xl font-bold text-amber-900 mb-6 text-center">{t['about.title']}</h2>
      <div class="w-24 h-1 bg-amber-500 mx-auto mb-16 rounded-full"></div>

      <!-- Ghani Difference -->
      <div class="mb-16 flex flex-col md:flex-row items-center gap-12">
        <div class="w-full md:w-1/2">
          <img src="https://placehold.co/600x400?text=Traditional+Wooden+Ghani" alt="Ghani" class="rounded-2xl shadow-lg w-full" />
        </div>
        <div class="w-full md:w-1/2">
          <h3 class="text-2xl font-bold text-stone-800 mb-4">{t['about.ghani.title']}</h3>
          <p class="text-stone-600 leading-relaxed text-lg">
            {t['about.ghani.desc']}
          </p>
        </div>
      </div>

      <!-- Story -->
      <div class="mb-16 bg-white p-10 rounded-3xl shadow-sm text-center border border-stone-100">
        <h3 class="text-2xl font-bold text-stone-800 mb-4">{t['about.story.title']}</h3>
        <p class="text-stone-600 leading-relaxed text-lg max-w-2xl mx-auto">
          {t['about.story.desc']}
        </p>
      </div>

      <!-- Quality Control -->
      <div class="text-center max-w-2xl mx-auto">
        <div class="inline-block p-4 bg-green-100 text-green-700 rounded-full mb-6 relative">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
        </div>
        <h3 class="text-2xl font-bold text-stone-800 mb-4">{t['about.quality.title']}</h3>
        <p class="text-stone-600 leading-relaxed text-lg">
          {t['about.quality.desc']}
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="scroll-mt-24 mb-16">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-3xl font-bold text-amber-900 mb-6 text-center">{t['contact.title']}</h2>
      <div class="w-24 h-1 bg-amber-500 mx-auto mb-16 rounded-full"></div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div class="bg-white p-8 rounded-2xl shadow-md border border-stone-100 h-full flex flex-col justify-center">
          <!-- Address -->
          <div class="mb-8">
            <h3 class="text-sm font-bold text-amber-600 uppercase tracking-wider mb-2">{t['contact.address.label']}</h3>
            <p class="text-xl text-stone-800 font-medium">
              {t['contact.address.value']}
            </p>
          </div>

          <!-- Phone -->
          <div class="mb-8">
            <h3 class="text-sm font-bold text-amber-600 uppercase tracking-wider mb-2">{t['contact.phone.label']}</h3>
            <p class="text-xl text-stone-800 font-medium mb-3">+91 9999999999</p>
            <WhatsAppButton message="Hi, I want to inquire about Wood Press Oils." label={t['buy.now']} />
          </div>

          <!-- Email -->
          <div>
            <h3 class="text-sm font-bold text-amber-600 uppercase tracking-wider mb-2">{t['contact.email.label']}</h3>
            <a href={`mailto:${t['contact.email.value']}`} class="text-xl text-stone-800 font-medium hover:text-amber-700 transition-colors">
              {t['contact.email.value']}
            </a>
          </div>
        </div>

        <!-- Map Placeholder -->
        <div class="bg-stone-200 rounded-2xl overflow-hidden shadow-md min-h-[400px] relative group h-full">
          <div class="absolute inset-0 flex items-center justify-center text-stone-400 group-hover:text-stone-500 transition-colors">
            <div class="text-center">
               <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
               <span class="text-xl font-medium">Google Maps Embed Placeholder</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
