---
import Header from '../components/Header.astro';
import '../styles/global.css';
import { ui } from '../i18n/ui';

interface Props {
  title: string;
  lang: 'en' | 'mr';
}

const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Pure Wood Pressed Oils - Healthy and Natural" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | {ui[lang]['site.title']}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-barley-corn-50 text-barley-corn-800 font-['Outfit',sans-serif] min-h-screen flex flex-col">
    <Header lang={lang} />
    <main class="flex-grow container mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="bg-barley-corn-800 text-barley-corn-400 py-6 text-center mt-auto">
      <p>&copy; {new Date().getFullYear()} {ui[lang]['site.title']}. All rights reserved.</p>
    </footer>
  </body>
</html>
