---
import { ui } from "../i18n/ui";

interface Props {
  lang: "en" | "mr";
}

const { lang } = Astro.props;

const t = ui[lang];
const otherLang = lang === "en" ? "mr" : "en";
const otherLangLabel =
  ui[lang]["switcher.label"] + ": " + (lang === "en" ? "मराठी" : "English");

const homeLink = `/woodpressoil/${lang}/`;
// Simple toggle for now, going to home of other lang or keeping same path could be complex without knowing current path context easily in Astro static without standardizing all paths.
// For this simple site, toggling to the root of the other language is a safe MVP approach or replacing the current path segment.
// Let's try to just switch the prefix.
const currentPath = Astro.url.pathname;
const otherLangPath = currentPath.replace(
  `/woodpressoil/${lang}`,
  `/woodpressoil/${otherLang}`,
);
---

<header class="bg-barley-corn-50 border-b border-barley-corn-200 sticky top-0 z-50">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a
      href={homeLink}
      class="text-2xl font-bold text-amber-800 hover:text-amber-900 transition-colors"
    >
      {t["site.title"]}
    </a>

    <nav class="hidden md:flex items-center gap-6">
      <a
        href={`/woodpressoil/${lang}/`}
        class="text-barley-corn-700 hover:text-amber-700 font-medium"
        >{t["nav.home"]}</a
      >
      <a
        href={`/woodpressoil/${lang}/#products`}
        class="text-barley-corn-700 hover:text-amber-700 font-medium"
        >{t["nav.products"]}</a
      >
      <a
        href={`/woodpressoil/${lang}/#about`}
        class="text-barley-corn-700 hover:text-amber-700 font-medium"
        >{t["nav.about"]}</a
      >
      <a
        href={`/woodpressoil/${lang}/#contact`}
        class="text-barley-corn-700 hover:text-amber-700 font-medium"
        >{t["nav.contact"]}</a
      >
    </nav>

    <div class="flex items-center gap-4">
      <a
        href={otherLangPath}
        class="text-sm font-semibold text-barley-corn-600 border border-barley-corn-300 px-3 py-1 rounded hover:bg-barley-corn-100 transition-colors"
      >
        {lang === "en" ? "मराठी" : "English"}
      </a>
    </div>
  </div>
</header>
